@{
    ViewData["Title"] = "List of Suggested Restaurants";
}

@model IEnumerable<Assignment4.Models.SuggestedRestaurant>

<div>
    <h2>List of suggested restaurants</h2>
</div>

<!--Create a table to iterate through the list and add movies based on what has been entered in the form-->
<table class="table table-bordered">
    <!--Table Headers-->
    <thead class="thead-light">
        <tr><th>Name</th><th>Restaurant Name</th><th>Favorite Dish</th><th>Phone</th></tr>
    </thead>
    <tbody>
        <!--Gets every instance within the List-->
        @foreach (Assignment4.Models.SuggestedRestaurant x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.RestaurantName</td>
                <td>@x.FavoriteDish</td>
                <td>@x.Phone</td>
            </tr>
        }
    </tbody>
</table>

